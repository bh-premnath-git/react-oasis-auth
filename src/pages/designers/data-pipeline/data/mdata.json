    },
    {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "description": "",
      "type": "object",
      "title": "Dedup",
      "ui_type": "object",
      "properties": {
        "keep": {
          "type": "select",
          "minLength": 1,
          "enum": [
            "any",
            "first",
            "last",
            "distinct",
            "unique_only"
          ],
          "default": "any"
        },
        "dedup_by": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "order_by": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "column": {
                "type": "string",
                "minLength": 1
              },
              "order": {
                "type": "select",
                "enum": [
                  "asc",
                  "desc"
                ]
              }
            },
            "required": [
              "order_column",
              "sort"
            ]
          }
        }
      },
      "required": [
        "keep",
        "dedup_by"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "keep": {
                "const": "first"
              }
            }
          },
          "then": {
            "required": ["order_by"]
          }
        },
        {
          "if": {
            "properties": {
              "keep": {
                "const": "last"
              }
            }
          },
          "then": {
            "required": ["order_by"]
          }
        }
      ]
    },
    {
      "id" : "file://repartition_schema.json",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "description": "",
      "type": "object",
      "title": "Repartition",
      "ui_type": "object",
      "properties": {
        "repartition_type": {
          "type": "select",
          "minLength": 1,
          "enum": [
            "repartition",
            "coalesce",
            "hash_repartition",
            "repartition_by_range"
          ],
          "default": "repartition"
        },
        "repartition_value": {
          "type": "number"
        },
        "override_partition": {
          "type": "string",
          "minLength": 1
        },
        "repartition_expression": {
          "type": "array-container",
          "uniqueItems": true,
          "minItems": 1,
          "items": {
            "required": [
              "expression",
              "sort_order",
              "order"
            ],
            "properties": {
              "expression": {
                "type": "expression",
                "minLength": 1
              },
              "sort_order": {
                "type": "string",
                "minLength": 1
              },
              "order": {
                "type": "select",
                "minLength": 1,
                "enum": [
                  "asc",
                  "desc"
                ],
                "default": "asc"
              }
            }
          }
        },
        "limit": {
          "type": "number"
        }
      },
      "required": [
        "repartition_type",
        "override_partition"
      ],
      "anyOf": [
        {
          "if": {
            "properties": {
              "repartition_type": { "const": "repartition" }
            }
          },
          "then": {
            "required": ["repartition_type","repartition_value"]
          }
        },
        {
          "if": {
            "properties": {
              "repartition_type": { "const": "coalesce" }
            }
          },
          "then": {
            "required": ["repartition_type","repartition_value"]
          }
        },
        {
          "if": {
            "properties": {
              "repartition_type": { "const": "hash_repartition" }
            }
          },
          "then": {
            "required": ["repartition_type","repartition_expression", "repartition_value"]
          }
        },
        {
          "if": {
            "properties": {
              "repartition_type": { "const": "repartition_by_range" }
            }
          },
          "then": {
            "required": ["repartition_type","repartition_expression", "repartition_value"]
          }
        }
      ]
    },
    {
      "$schema": "http://json-schema.org/draft-04/schema#",
